{
  "manifest_version": 2,
  "name": "Chrome Jenkins Failing Specs",
  "version": "1.0",
  "description": "This extension helps identify buggy specs in recent Jenkins build failures",
  "icons": {
    "128": "images/evil-jenkins.png"
  },
  "background": {
    "scripts": ["app/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": { "48": "images/evil-jenkins.png" },
    "default_title": "Failing Specs",
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": ["https://*.com/view/*/job/"],
    "include_globs": ["*https://jenkins.*"],
    "exclude_globs": ["https://*.com/view/*/job/*/*/"],
    "js": ["app/content.js"],
    "run_at": "document_end"
  }],
  "author": "Bryan Finlayson",
  "offline_enabled": false,
  "permissions": [
    "activeTab",
    "debugger",
    "storage",
    "declarativeContent"
  ]
}
